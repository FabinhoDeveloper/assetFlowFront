<script>
// Toggle sidebar
document.getElementById('sidebarToggle').addEventListener('click', function() {
    document.getElementById('sidebar').classList.toggle('active');
    document.getElementById('content').classList.toggle('active');
});


// Add item
document.getElementById('addItemBtn').addEventListener('click', function() {
    const name = document.getElementById('itemName').value;
    if (name) {
        window.location.reload();
    } else {
    alert('Please enter an item name');
    }
});

// Update item
document.getElementById('updateItemBtn').addEventListener('click', function() {
    // In a real application, you would send this data to your server
    // For this demo, we'll just close the modal
    var editModal = bootstrap.Modal.getInstance(document.getElementById('editItemModal'));
    editModal.hide();
});

const itemForm = document.getElementById('addItemForm');

itemForm.addEventListener('submit', async (e) => {
    e.preventDefault();

    const itemData = {
      itemName: itemForm.itemName.value,
      category: itemForm.category.value,
      serialNumber: itemForm.serialNumber.value,
      value: itemForm.value.value,
      assignedTo: itemForm.assignedTo.value,
      location: itemForm.location.value,
      description: itemForm.description.value,
      purchaseDate: itemForm.purchaseDate.value,
      workspaceId: itemForm.workspaceId.value
    };

    try {
      const res = await axios.post('/items', itemData);



      if (res.data.success) {
        window.alert("Item cadastrado com sucesso!")
        window.location.href = '/workspaces'
      } else {
        window.alert("Erro ao cadastrar item!")
      }
    } catch (err) {
        window.alert("Erro ao cadastrar item!");
    }
  });
</script>
